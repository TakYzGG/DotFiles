# Nombre del menu
[begin] (Menu)
[encoding] {UTF-8}
      
# Buscador      
      [exec] (Buscar programas)      {dmenu_run}

# Submenu Programas
[submenu] (Programas)
      [exec] (Lxterminal)            {lxterminal}
      [exec] (Firefox) 	             {firefox}
      [exec] (Thunar) 	             {Thunar}
      [exec] (Editor de texto)       {leafpad}
      [exec] (Reproductor de video)  {vlc}
      [exec] (Reproductor de musica) {lxterminal -e cmus}
[end]

# Submenu office
[submenu] (Office)
      [exec] (Word) 		     {libreoffice --writer}
      [exec] (Exel)		     {libreoffice --calc}
      [exec] (Powerpoint)            {libreoffice --impress}
[end]

# Submenu Fluxblox menu
[submenu] (Fluxbox menu)
      [config] (Configure)
[submenu] (System Styles) {Choose a style...}
      [stylesdir] (/usr/share/fluxbox/styles)
[end]
[submenu] (User Styles) {Choose a style...}
      [stylesdir] (~/.fluxbox/styles)
[end]
      [workspaces] (Workspace List)
      [commanddialog] (Fluxbox Command)
      [reconfig] (Reload config)
      [restart] (Restart)
      [exec] (About) {(fluxbox -v; fluxbox -info | sed 1d) | xmessage -file - -center}
      [separator]
      [exit] (Exit)
[end]
[endencoding]
[end]
